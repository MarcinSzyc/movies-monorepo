  "version": "0.2.0",
  "configurations": [
      {
        "name": "Attach",
        "port": 9229,
        "request": "attach",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node",
        "sourceMaps": true,
        "cwd": "${workspaceFolder}/packages/movies-app/src/",
        "localRoot": "${workspaceFolder}/packages/movies-app",
        "remoteRoot": "/movies/",
        "outFiles": ["${workspaceRoot}/packages/movies-app/dist/**/*.js"],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/packages/movies-app/**",
          "!**/node_modules/**"
        ]
      },
  ] 
} 